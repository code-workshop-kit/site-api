{
  "name": "cwk-site-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "nodemon src/index.js",
    "prod": "export NODE_ENV=production && node ./src/index.js",
    "test": "export PORT=3001 && mocha ./test/**/*.test.js --exit",
    "docker:test": "docker exec -it cwk-site-api_app_1 npm run test",
    "docker:seed": "docker exec -it cwk-site-api_app_1 npx knex migrate:latest --env development && docker exec -it cwk-site-api_app_1 npx knex seed:run --env development"
  },
  "keywords": [],
  "author": "Joren Broekema",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "sinon": "^9.2.1"
  },
  "dependencies": {
    "email-validator": "^2.0.4",
    "knex": "^0.21.12",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "pg": "^8.4.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "printWidth": 100
  }
}
